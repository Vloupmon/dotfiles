[color]
    ui = true

[core]
    editor = vi
    pager = delta
    autocrlf = input

[credential]
    helper = store

[pull]
    rebase = false

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
    syntax-theme = OneHalfDark

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
